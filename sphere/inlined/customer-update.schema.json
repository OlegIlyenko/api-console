{
  "$schema":"http://json-schema.org/draft-04/schema#",
  "title":"Customer Update Command",
  "type":"object",
  "required":["version","actions"],
  "properties":{
    "version":{
      "type":"number",
      "description":"The expected version of the category on which the changes should be applied. If the expected version does not match the actual version, a 409 Conflict will be returned."
    },
    "actions":{
      "type":"array",
      "items":{
        "title":"Action",
        "type":"object",
        "oneOf":[{
          "title":"changeName",
          "type":"object",
          "required":["action","firstName, lastName"],
          "properties":{
            "action":{
              "type":"string",
              "enum":["changeName"]
            },
            "firstName":{
              "type":"string"
            },
            "lastName":{
              "type":"string"
            },
            "middleName":{
              "type":"string"
            },
            "title":{
              "type":"string"
            }
          }
        },{
          "title":"changeEmail",
          "type":"object",
          "required":["action","email"],
          "properties":{
            "action":{
              "type":"string",
              "enum":["changeEmail"]
            },
            "email":{
              "type":"string"
            }
          }
        },{
          "title":"addAddress",
          "type":"object",
          "required":["action","address"],
          "properties":{
            "action":{
              "type":"string",
              "enum":["addAddress"]
            },
            "address":{
              "type":"array",
              "items":{
                "title":"Address",
                "type":"object",
                "required":["country"],
                "properties":{
                  "id":{
                    "type":"string"
                  },
                  "title":{
                    "type":"string"
                  },
                  "salutation":{
                    "type":"string"
                  },
                  "firstName":{
                    "type":"string"
                  },
                  "lastName":{
                    "type":"string"
                  },
                  "streetName":{
                    "type":"string"
                  },
                  "streetNumber":{
                    "type":"string"
                  },
                  "additionalStreetInfo":{
                    "type":"string"
                  },
                  "postalCode":{
                    "type":"string"
                  },
                  "city":{
                    "type":"string"
                  },
                  "region":{
                    "type":"string"
                  },
                  "state":{
                    "type":"string"
                  },
                  "country":{
                    "type":"string",
                    "description":"A two-digit country code as per <a href=\"http://en.wikipedia.org/wiki/ISO_3166-1_alpha-2\">ISO 3166-1 alpha-2</a>."
                  },
                  "company":{
                    "type":"string"
                  },
                  "department":{
                    "type":"string"
                  },
                  "building":{
                    "type":"string"
                  },
                  "apartment":{
                    "type":"string"
                  },
                  "pOBox":{
                    "type":"string"
                  },
                  "phone":{
                    "type":"string"
                  },
                  "mobile":{
                    "type":"string"
                  },
                  "email":{
                    "type":"string"
                  },
                  "additionalAddressInfo":{
                    "type":"string"
                  }
                }
              }
            }
          }
        },{
          "title":"changeAddress",
          "type":"object",
          "required":["action","addressId","address"],
          "properties":{
            "action":{
              "type":"string",
              "enum":["changeAddress"]
            },
            "addressId":{
              "type":"string"
            },
            "address":{
              "type":"array",
              "items":{
                "title":"Address",
                "type":"object",
                "required":["country"],
                "properties":{
                  "id":{
                    "type":"string"
                  },
                  "title":{
                    "type":"string"
                  },
                  "salutation":{
                    "type":"string"
                  },
                  "firstName":{
                    "type":"string"
                  },
                  "lastName":{
                    "type":"string"
                  },
                  "streetName":{
                    "type":"string"
                  },
                  "streetNumber":{
                    "type":"string"
                  },
                  "additionalStreetInfo":{
                    "type":"string"
                  },
                  "postalCode":{
                    "type":"string"
                  },
                  "city":{
                    "type":"string"
                  },
                  "region":{
                    "type":"string"
                  },
                  "state":{
                    "type":"string"
                  },
                  "country":{
                    "type":"string",
                    "description":"A two-digit country code as per <a href=\"http://en.wikipedia.org/wiki/ISO_3166-1_alpha-2\">ISO 3166-1 alpha-2</a>."
                  },
                  "company":{
                    "type":"string"
                  },
                  "department":{
                    "type":"string"
                  },
                  "building":{
                    "type":"string"
                  },
                  "apartment":{
                    "type":"string"
                  },
                  "pOBox":{
                    "type":"string"
                  },
                  "phone":{
                    "type":"string"
                  },
                  "mobile":{
                    "type":"string"
                  },
                  "email":{
                    "type":"string"
                  },
                  "additionalAddressInfo":{
                    "type":"string"
                  }
                }
              }
            }
          }
        },{
          "title":"removeAddress",
          "type":"object",
          "required":["action","addressId"],
          "properties":{
            "action":{
              "type":"string",
              "enum":["removeAddress"]
            },
            "addressId":{
              "type":"string"
            }
          }
        },{
          "title":"setDefaultShippingAddress",
          "type":"object",
          "description":"Sets the default shipping address from the customer's addresses.",
          "required":["action"],
          "properties":{
            "action":{
              "type":"string",
              "enum":["setDefaultShippingAddress"]
            },
            "addressId":{
              "type":"string",
              "description":"If not defined, the customer's defaultShippingAddress is unset."
            }
          }
        },{
          "title":"setDefaultBillingAddress",
          "type":"object",
          "description":"Sets the default billing address from the customer's addresses.",
          "required":["action"],
          "properties":{
            "action":{
              "type":"string",
              "enum":["setDefaultBillingAddress"]
            },
            "addressId":{
              "type":"string",
              "description":"If not defined, the customer's defaultBillingAddress is unset."
            }
          }
        },{
          "title":"setCustomerGroup",
          "type":"object",
          "required":["action","customerGroup"],
          "properties":{
            "action":{
              "type":"string",
              "enum":["setCustomerGroup"]
            },
            "customerGroup":{
              "title":"Reference to a CustomerGroup",
              "description":"A `Reference` is a JSON object representing a (loose) reference to another resource on SPHERE.IO platform",
              "type":"object",
              "properties":{
                "typeId ":{
                  "type":"string",
                  "description":"The typeId designates the type of the referenced resource",
                  "enum":["customerGroup"]
                },
                "id":{
                  "type":"string",
                  "description":"The unique ID of the referenced resource"
                }
              }
            }
          }
        },{
          "title":"setCustomerNumber",
          "type":"object",
          "description":"Sets a string that uniquely identifies a customer. It can be used to create more human-readable (in contrast to ID) identifier for the customer.",
          "required":["action"],
          "properties":{
            "action":{
              "type":"string",
              "enum":["setCustomerNumber"]
            },
            "customerNumber":{
              "type":"string",
              "description":"It should be unique across a project. Once it's set, it cannot be changed."
            }
          }
        },{
          "title":"setExternalId",
          "type":"object",
          "description":"Sets a new ID which can be used as additional identifier for external Systems like CRM or ERP.",
          "required":["action"],
          "properties":{
            "action":{
              "type":"string",
              "enum":["setExternalId"]
            },
            "externalId":{
              "type":"string",
              "description":"Optional ID defined in some external system. If not defined, the external ID is unset."
            }
          }
        },{
          "title":"setCompanyName",
          "type":"object",
          "required":["action"],
          "properties":{
            "action":{
              "type":"string",
              "enum":["setCompanyName"]
            },
            "companyName":{
              "type":"string",
              "description":"If not defined, the company name is unset."
            }
          }
        },{
          "title":"setDateOfBirth",
          "type":"object",
          "required":["action"],
          "properties":{
            "action":{
              "type":"string",
              "enum":["setDateOfBirth"]
            },
            "dateOfBirth":{
              "type":"date",
              "description":"If not defined, the date of birth is unset."
            }
          }
        },{
          "title":"setVatId",
          "type":"object",
          "required":["action"],
          "properties":{
            "action":{
              "type":"string",
              "enum":["setVatId"]
            },
            "vatId":{
              "type":"string",
              "description":"If not defined, the vat Id is unset."
            }
          }
        }]
      }
    }
  }
}