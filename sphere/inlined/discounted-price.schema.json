{
  "$schema":"http://json-schema.org/draft-04/schema#",
  "title":"Discounted Price",
  "type":"object",
  "required":["value","discount"],
  "properties":{
    "value":{
      "title":"Money",
      "required":["centAmount","currencyCode"],
      "type":"object",
      "properties":{
        "centAmount":{
          "type":"integer"
        },
        "currencyCode":{
          "type":"string",
          "pattern":"[A-Z]{3}"
        }
      }
    },
    "country":{
      "type":"string",
      "pattern":"[A-Z]{2}"
    },
    "discount":{
      "$ref":"reference.schema.json",
      "description":"A reference to a ProductDiscount."
    }
  }
}